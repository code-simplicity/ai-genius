{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@core": ["packages/ai-genius-core/src/*"],
      "@ui/*": ["packages/ai-genius-ui/src/*"],
      "@app": ["apps/ai-genius-app/src/*"],
      "@docs": ["docs/*"]
    }
  },
  "include": ["apps/**/*", "packages/**/*", "docs/*"],
  "exclude": ["node_modules"]
}
